<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Post A Job Form"
            android:foregroundGravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="#6200EA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/black2">

        <TextView
            android:id="@+id/xd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="28dp"
            android:text="Job ( Extra ) Information "
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xExpiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Expiry"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xMinimumExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimum Experience"
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="22dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xMaximumExperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximum Experience"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Department"
            android:password="true"
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Comment"
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


    </LinearLayout>


</RelativeLayout>