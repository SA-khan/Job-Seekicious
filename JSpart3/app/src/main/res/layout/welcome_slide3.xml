<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unique">

    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Up Form"
            android:foregroundGravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="#6200EA"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/black2">


        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sCVTextview"
                android:hint="Upload CV..."
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/sCVButton"
                android:onClick="notWorking"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Browse"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sImageTextview"
                android:hint="Upload Picture..."
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/sImageButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Browse"
                android:onClick="ImageUpload"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>