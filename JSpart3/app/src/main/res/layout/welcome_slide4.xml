<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unique">


    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sign Up Form"
            android:foregroundGravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="#6200EA"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/black2"
        android:weightSum="1">


        <EditText
            android:background="@drawable/shadow"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:inputType="textMultiLine"
            android:textColor="#ffffff"
            android:text="Terms And Condition"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:ems="10"
            android:id="@+id/sAgreement"
            android:layout_gravity="start"
            android:gravity="start"
            android:layout_weight="0.60" />

        <CheckBox
            android:id="@+id/sAgreementClicked"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:text="I accepted the terms and conditions of this application."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>