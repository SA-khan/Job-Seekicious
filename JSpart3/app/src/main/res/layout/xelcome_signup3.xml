<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/tab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Post A Job Form"
            android:foregroundGravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="#6200EA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/black2">

        <TextView
            android:id="@+id/xd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="28dp"
            android:text="Job Description "
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/xEmployeeCareerLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:entries="@array/country_arrays"
            android:prompt="@string/country_prompt"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/xEmployeeEducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/education_arrays"
            android:prompt="@string/education_prompt"
            android:spinnerMode="dialog"
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="22dp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/xEmployeeNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number Of Position"
            android:entries="@array/numbers_arrays"
            android:prompt="@string/numbers_prompt"
            android:spinnerMode="dialog"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <Spinner
            android:id="@+id/xEmployeeSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Salary"
            android:entries="@array/salary_arrays"
            android:prompt="@string/salary_prompt"
            android:spinnerMode="dialog"
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <EditText
            android:id="@+id/xEmployeeSkillSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:hint="Skills"
            android:background="#ffffff"
            android:gravity="center"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>


    </LinearLayout>


</RelativeLayout>