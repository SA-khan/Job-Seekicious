<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saad.jspart3.ChatActivity">
    <LinearLayout
        android:id="@+id/myactivityTab"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false">
        <TextView
            android:id="@+id/activityHeading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="My Chat"
            android:foregroundGravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"

            android:gravity="center"
            android:background="#6200EA"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/myactivityTab"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:background="@color/bg_screen2"
            android:id="@+id/chatappMessagesView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp">

        </ListView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        >
        <EditText
            android:id="@+id/chatappMessage"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginTop="7dp"
            android:hint="Write Your Text Here"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>
        <Button
            android:id="@+id/chatappSend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Send"
            android:layout_gravity="fill_vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>


</RelativeLayout>
