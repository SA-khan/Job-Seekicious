<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saad.jspart3.employer_employee_relation">
    <LinearLayout
        android:id="@+id/myemployeremployeeTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:id="@+id/activityHeading"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Details Of Employee"
            android:foregroundGravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="#6200EA"/>

    </LinearLayout>
    <TextView
        android:id="@+id/eeEmployerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In By "
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/eeEmployerDP"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@id/eeEmployerName"
        android:layout_marginRight="5dp"
        android:layout_marginTop="17dp"
        android:paddingRight="60dp"
        android:elevation="40dp"
        android:focusable="false"
        android:src="@drawable/abc_btn_check_to_on_mtrl_015"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/eeEmployeeIntro"
        android:layout_below="@id/myemployeremployeeTab"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/eeEmployeeDP"
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:src="@drawable/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="0dp">
                <Button

                    android:text="Skype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="0dp">
                <Button

                    android:text="SMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_height="0dp">
                <Button

                    android:text="CV Download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/eeEmployeeName"
        android:layout_below="@id/eeEmployeeIntro"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="Employee Name"/>

</RelativeLayout>
</ScrollView>
